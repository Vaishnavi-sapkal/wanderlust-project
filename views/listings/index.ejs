<% layout("/layouts/boilerplate.ejs")%>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 1rem;
    opacity: 0.7;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
  }
  .tax-info {
    display: none;
  }
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
  }
  .filter-a {
    text-decoration: none;
    font-size: 0.8rem;
    color: black;
  }
</style>
<div id="filters">
  <div class="filter" style="opacity: 5">
    <div><i class="fa-solid fa-fire"></i></div>
    <p><a class="filter-a" href="/listings/filter/Trending">Trending</a></p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p><a class="filter-a" href="/listings/filter/Rooms">Rooms</a></p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>
      <a class="filter-a" href="/listings/filter/Iconic_cities"
        >Iconic cities</a
      >
    </p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-mountain-sun"></i></div>
    <p><a class="filter-a" href="/listings/filter/Mountains">Mountains</a></p>
  </div>
  <div class="filter">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p><a class="filter-a" href="/listings/filter/Castles">Castles</a></p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>
      <a class="filter-a" href="/listings/filter/Amazing_Pool">Amazing Pool</a>
    </p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-tree"></i></div>
    <p><a class="filter-a" href="/listings/filter/Forest">Forest</a></p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-campground"></i></div>
    <p><a class="filter-a" href="/listings/filter/Camping">Camping</a></p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-cow"></i></div>
    <p><a class="filter-a" href="/listings/filter/Farm">Farm</a></p>
  </div>
  <div class="filter">
    <div><i class="fa-regular fa-snowflake"></i></div>
    <p><a class="filter-a" href="/listings/filter/arctic">arctic</a></p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-igloo"></i></div>
    <p><a class="filter-a" href="/listings/filter/Domes">Domes</a></p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-ship"></i></div>
    <p><a class="filter-a" href="/listings/filter/boot">Boots</a></p>
  </div>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault"
        >Display total after Taxes</label
      >
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings){ %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b> <%= listing.title %> </b><br />
          <li>
            &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
            <i class="tax-info">&nbsp;+18% GST</i>
          </li>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
<script>
  let taxswitch = document.getElementById("switchCheckDefault");
  taxswitch.addEventListener("click", () => {
    let taxinfo = document.getElementsByClassName("tax-info");
    for (info of taxinfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
